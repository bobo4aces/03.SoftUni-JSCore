<article class="post">
    <div class="col rank">
        <span>{{posts.rank}}</span>
    </div>
    <div class="col thumbnail">
        <a href="{{posts.url}}">
            <img src="{{posts.imageUrl}}">
        </a>
    </div>
    <div class="post-content">
        <div class="title">
            <a href="{{posts.url}}">
                {{posts.title}}
            </a>
        </div>
        <div class="details">
            <div class="info">
                submitted {{posts.date}} ago by {{posts.username}}
            </div>
            <div class="controls">
                <ul>
                    <li class="action"><a class="commentsLink" href="#/comments">comments</a></li>
                    <li class="action"><a class="editLink" href="#/edit">edit</a></li>
                    <li class="action"><a class="deleteLink" href="#/delete">delete</a></li>
                </ul>
            </div>

        </div>
    </div>
</article>